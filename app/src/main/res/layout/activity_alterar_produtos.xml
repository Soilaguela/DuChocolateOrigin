<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".AlterarProdutos">
    <EditText
        android:id="@+id/id_ADP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/EleminarDProdutos"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:text="@string/EleminarDProdutos"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/ID_AQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/EleminarQuantidadeemE"
        android:importantForAutofill="no"
        android:inputType="number"
        tools:targetApi="o" />

    <Button
        android:id="@+id/button6"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttonstyleith"
        android:text="@string/AlterarP"
        android:onClick="AlterarProduto"
        android:textColor="#fff" />

    <Button
        android:id="@+id/button7"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttonstyleith"
        android:text="@string/CancelarP"
        android:onClick="cancelarAlteracaoProduto"
        android:textColor="#fff" />

</LinearLayout>