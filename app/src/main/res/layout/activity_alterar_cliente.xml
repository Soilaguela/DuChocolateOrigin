<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AlterarCliente">

    <EditText
        android:id="@+id/ID_NCV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nomeclienteD"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:text="@string/nomeclienteD"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/ID_EMP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nomeempresa"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/ID_PREÇO"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/preço"
        android:importantForAutofill="no"
        android:inputType="number"
        tools:targetApi="o" />


    <EditText
        android:id="@+id/ID_TELEF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/Telefone"
        android:importantForAutofill="no"
        android:inputType="number"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/ID_DATA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/dataD"
        android:importantForAutofill="no"
        android:inputType="date"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/ID_EMAIL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        tools:targetApi="o" />
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="1dp"
        android:text="@string/descri_o_do_produto"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/endcastanho"
        android:layout_marginStart="8dp" />

    <Spinner
        android:id="@+id/spinnerCliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/descricaoproduto"></Spinner>
    <Space
        android:layout_width="match_parent"
        android:layout_height="2dp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:background="@drawable/buttonstyleith"
        android:onClick="GuardarAlteracao"
        android:text="@string/AlterarP"
        android:textColor="#fff" />

    <Button
        android:id="@+id/button9"
        android:layout_width="291dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:background="@drawable/buttonstyleith"
        android:onClick="cancelarAlteracao"
        android:text="@string/ECancelarDetalhedV"
        android:textColor="#fff" />
</LinearLayout>